{% extends 'base.html.twig' %}

{% block title %}Blog categories | Symfony test blog{% endblock %}

{% block body %}
    <h1>Blog categories</h1>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-light">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">actions</th>
            </tr>
            </thead>
            <tbody>
            {% for blog_category in blog_categories %}
                <tr>
                    <th scope="row">{{ loop.index }}</th>
                    <td>{{ blog_category.id }}</td>
                    <td>{{ blog_category.name }}</td>
                    <td>{{ blog_category.description }}</td>
                    <td>
                        <a href="{{ path('blog_category_show', {'id': blog_category.id}) }}" class="btn btn-info">Show</a>
                        <a href="{{ path('blog_category_edit', {'id': blog_category.id}) }}" class="btn btn-warning">Edit</a>
                        {{ include('blog_category/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="row">
        <div class="col-4 offset-8"><a href="{{ path('blog_category_new') }}" class="btn btn-primary">Create new</a></div>
    </div>
{% endblock %}
