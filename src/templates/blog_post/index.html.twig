{% extends 'base.html.twig' %}

{% block title %}Blog posts | Symfony test blog{% endblock %}

{% block body %}
    <h1>Blog posts</h1>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-light">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Content</th>
                <th scope="col">File</th>
                <th scope="col">actions</th>
            </tr>
            </thead>
            <tbody>
            {% for blog_post in blog_posts %}
                <tr>
                    <th scope="row">{{ loop.index }}</th>
                    <td>{{ blog_post.id }}</td>
                    <td>{{ blog_post.name }}</td>
                    <td>{{ blog_post.content }}</td>
                    <td>
                        {% if blog_post.file %}
                            <a href="{{ asset('uploads/blog/post/' ~ blog_post.file) }}" target="_blank">View</a>
                        {% else %}
                            File not added.
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('blog_post_show', {'id': blog_post.id}) }}" class="btn btn-info">Show</a>
                        <a href="{{ path('blog_post_edit', {'id': blog_post.id}) }}" class="btn btn-warning">Edit</a>
                        {{ include('blog_post/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="row">
        <div class="col-4 offset-8"><a href="{{ path('blog_post_new') }}" class="btn btn-primary">Create new</a></div>
    </div>
{% endblock %}
